<h1>客户信息</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>姓名</th>
      <th>性别</th>
      <th>出生日期</th>
      <th>联系方式</th>
      <th>邮箱</th>
      <th>公司</th>
      <th></th>
      <th>操作</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.gender %></td>
        <td><%= user.birthday %></td>
        <td><%= user.phone %></td>
        <td><%= user.email %></td>
        <td><%= user.company %></td>
        <td><%= link_to '详情', user %></td>
        <td><%= link_to '编辑', edit_user_path(user) %></td>
        <td><%= link_to '删除', user, method: :delete, data: { confirm: '确定删除吗?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

